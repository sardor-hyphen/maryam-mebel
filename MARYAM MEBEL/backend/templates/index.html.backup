{% extends "base.html" %}

{% block title %}Maryam Furniture Factory - Premium Mebel{% endblock %}

{% block extra_css %}
<style>
@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@700;900&family=Roboto:wght@300;400&display=swap');
        :root {
            --font-heading: 'Montserrat', sans-serif;
            --font-body: 'Roboto', sans-serif;
            --color-red: #cc0000;
            --color-white: #ffffff;
            --color-black: #0a0a0a;
            --color-dark-grey: #1a1a1a;
            --color-light-grey: #888;
            --shadow-light: 0 5px 15px rgba(0,0,0,0.1);
            --shadow-medium: 0 10px 30px rgba(0,0,0,0.15);
            --shadow-heavy: 0 20px 60px rgba(0,0,0,0.25);
        }
        
        *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }
        html { scroll-behavior: smooth; font-size: 16px; }
        body {
            font-family: var(--font-body);
            background: linear-gradient(135deg, var(--color-black) 0%, #1a1a1a 100%);
            color: var(--color-white);
            -webkit-font-smoothing: antialiased;
            overflow-x: hidden;
            line-height: 1.6;
            opacity: 0;
            animation: fadeInPage 1.2s 0.3s forwards cubic-bezier(0.4, 0, 0.2, 1);
        }
        .container { max-width: 1440px; margin: 0 auto; padding: 0 clamp(20px, 4vw, 60px); }
        @keyframes fadeInPage { from { opacity: 0; transform: translateY(20px); } to { opacity: 1; transform: translateY(0); } }
        
        /* Header */
        .main-header {
            position: fixed; top: 0; left: 0; width: 100%; z-index: 1000; padding: 20px 0;
            background-color: transparent; transition: background-color 0.4s ease, padding 0.4s ease;
        }
        .main-header.scrolled {
            background-color: rgba(10, 10, 10, 0.85); backdrop-filter: blur(10px);
            padding: 15px 0; box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }
        .navbar { display: flex; justify-content: space-between; align-items: center; }
        .logo { display: flex; align-items: center; gap: 15px; text-decoration: none; transition: transform 0.3s ease; }
        .logo:hover { transform: translateY(-2px); }
        .logo img { 
            width: 50px; height: auto; 
            filter: drop-shadow(0 4px 8px rgba(204, 0, 0, 0.3)); 
        }
        .logo-text { 
            color: var(--color-white); 
            font-family: var(--font-heading); 
            font-weight: 700; 
            font-size: 2rem;
            background: var(--color-red); 
            -webkit-background-clip: text; 
            -webkit-text-fill-color: transparent;
        }
        .nav-links { display: flex; gap: 40px; align-items: center; }
        @media (max-width: 768px) {
            .nav-links {
                position: fixed;
                top: 0;
                right: 0;
                height: 100vh;
                width: 70%;
                background-color: rgba(10, 10, 10, 0.95);
                flex-direction: column;
                justify-content: center;
                align-items: center;
                gap: 30px;
                transform: translateX(100%);
                transition: transform 0.3s ease;
                z-index: 1000;
            }
            .nav-links.show {
                transform: translateX(0);
            }
        }
        .nav-links a {
            color: var(--color-white); text-decoration: none; margin: 0 18px; font-weight: 400; font-size: 1rem;
            position: relative; letter-spacing: 0.5px;
        }
        .nav-links a::after {
            content: ''; position: absolute; width: 0%; height: 2px; bottom: -6px; left: 0;
            background-color: var(--color-red); transition: width 0.4s cubic-bezier(0.23, 1, 0.32, 1);
        }
        .nav-links a:hover::after, .nav-links a.active::after { width: 100%; }
        
        /* Hero Section */
        .hero {
            height: 100vh;
            background-image: linear-gradient(rgba(0,0,0,0.5), rgba(10,10,10,1)), url('https://images.unsplash.com/photo-1604578762246-41134e37f9cc?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw&auto=format&fit=crop&w=1740&q=80');
            background-size: cover;
            background-position: center;
            display: flex;
            align-items: center;
            position: relative;
            overflow: hidden;
            background-attachment: fixed;
        }
        .hero::before {
            content: ''; position: absolute; top: 0; left: 0; right: 0; bottom: 0;
            background: radial-gradient(circle at 50% 50%, rgba(204, 0, 0, 0.1) 0%, transparent 70%);
            pointer-events: none;
        }
        .hero-content {
            max-width: 700px;
            padding: 0 20px;
            z-index: 2;
        }
        .hero h1 {
            font-family: var(--font-heading);
            font-size: 4.5rem;
            font-weight: 900;
            line-height: 1.1;
            margin-bottom: 25px;
            background: linear-gradient(135deg, var(--color-white) 0%, var(--color-red) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
        .hero p {
            font-size: 1.2rem;
            color: var(--color-light-grey);
            margin-bottom: 40px;
            line-height: 1.8;
        }
        .hero-btn {
            display: inline-block;
            padding: 18px 40px;
            background: var(--color-red);
            color: var(--color-white);
            text-decoration: none;
            font-family: var(--font-heading);
            font-weight: 700;
            font-size: 1rem;
            border-radius: 25px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border: none;
            cursor: pointer;
            animation: pulse 1.5s infinite;
            box-shadow: 0 0 0 0 rgba(204, 0, 0, 0.7);
        }
        .hero-btn:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(204, 0, 0, 0.4);
            animation: pulse 1s infinite;
        }
        @keyframes pulse {
            0% { box-shadow: 0 0 0 0 rgba(204, 0, 0, 0.7); }
            50% { box-shadow: 0 0 0 20px rgba(204, 0, 0, 0.3); }
            100% { box-shadow: 0 0 0 30px rgba(204, 0, 0, 0); }
        }
        
        /* Features Section */
        .features-section {
            padding: 100px 0;
            background: linear-gradient(135deg, var(--color-black) 0%, #1a1a1a 100%);
        }
        .section-title {
            text-align: center;
            margin-bottom: 80px;
        }
        .section-title h2, .section-title h1 {
            font-family: var(--font-heading);
            font-size: 3rem;
            font-weight: 700;
            margin-bottom: 15px;
            background: linear-gradient(135deg, var(--color-white) 0%, var(--color-red) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
        .section-title p {
            color: var(--color-light-grey);
            font-size: 1.1rem;
            max-width: 500px;
            margin: 0 auto;
        }
        .why-us-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 40px;
            text-align: center;
        }
        .feature-item {
            background: transparent;
            border-radius: 0;
            padding: 0;
            text-align: center;
            transition: all 0.4s ease;
        }
        .feature-item:hover {
            transform: translateY(-10px);
            box-shadow: none;
        }
        .feature-item svg {
            width: 50px;
            height: 50px;
            color: var(--color-red);
            margin-bottom: 20px;
        }
        .feature-item h3 {
            font-family: var(--font-heading);
            font-size: 1.5rem;
            margin-bottom: 10px;
        }
        .feature-item p {
            color: var(--color-light-grey);
            font-size: 0.95rem;
        }
        
        /* Latest Products Section */
        .latest-products {
            padding: 100px 0;
            background: linear-gradient(135deg, var(--color-black) 0%, #1a1a1a 100%);
        }
        .product-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 40px;
        }
        .product-card {
            background-color: var(--color-dark-grey);
            border-radius: 10px;
            overflow: hidden;
            text-decoration: none;
            color: var(--color-white);
            display: block;
            transition: transform 0.4s ease, box-shadow 0.4s ease;
            position: relative;
        }
        .product-card::before {
            content: ''; position: absolute; top: 0; left: 0; right: 0; bottom: 0;
            background: linear-gradient(135deg, rgba(204, 0, 0, 0.1) 0%, transparent 50%);
            opacity: 0; transition: opacity 0.4s ease; z-index: 1;
        }
        .product-card:hover::before { opacity: 1; }
        .product-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.5);
        }
        .product-image {
            position: relative;
            overflow: hidden;
        }
        .product-card .product-image img {
            width: 100%;
            height: 350px;
            object-fit: cover;
        }
        .product-card:hover .product-image img { transform: scale(1.05); }
        .product-info {
            padding: 30px;
            position: relative;
            z-index: 2;
        }
        .product-info h3 {
            font-family: var(--font-heading);
            font-size: 1.5rem;
            margin-bottom: 10px;
            color: var(--color-white);
        }
        .product-info .price {
            font-size: 1.3rem;
            font-weight: 700;
            color: var(--color-primary);
            margin: 10px 0;
        }
        .product-info .original-price {
            font-size: 1rem;
            color: var(--color-light-grey);
            text-decoration: line-through;
            margin-right: 10px;
        }
        .product-info .discount {
            background: var(--color-primary);
            color: white;
            font-size: 0.7rem;
            padding: 2px 6px;
            border-radius: 4px;
            display: inline-block;
            margin-left: 10px;
        }
        .cta-button {
            display: inline-block; padding: 18px 40px; background: var(--color-red); color: var(--color-white);
            text-decoration: none; font-family: var(--font-heading); font-weight: 700; font-size: 1rem;
            border-radius: 5px; transition: transform 0.3s ease, box-shadow 0.3s ease; border: none; cursor: pointer;
        }
        .cta-button:hover { 
            transform: translateY(-3px); 
            box-shadow: 0 10px 20px rgba(204, 0, 0, 0.3);
        }
        
        /* Footer */
        .main-footer {
            padding: 50px 0;
            background-color: #000;
            border-top: 1px solid #222;
            text-align: center;
            position: relative;
        }
        .main-footer .logo {
            justify-content: center;
            margin-bottom: 20px;
        }
        .main-footer .logo { justify-content: center; margin-bottom: 30px; }
        .main-footer p { color: var(--color-light-grey); font-size: 0.9rem; }
        
        /* Mobile Responsiveness */
        /* Hamburger Menu */
        .hamburger {
            display: none;
            flex-direction: column;
            justify-content: space-between;
            width: 30px;
            height: 21px;
            cursor: pointer;
            z-index: 1001;
        }
        .hamburger span {
            display: block;
            height: 3px;
            width: 100%;
            background-color: var(--color-white);
            border-radius: 3px;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }
        .hamburger.active span:nth-child(1) {
            transform: translateY(9px) rotate(45deg);
        }
        .hamburger.active span:nth-child(2) {
            opacity: 0;
        }
        .hamburger.active span:nth-child(3) {
            transform: translateY(-9px) rotate(-45deg);
        }
        @media (max-width: 992px) {
            .why-us-grid, .full-product-grid { grid-template-columns: 1fr 1fr; }
            .product-grid, .contact-layout, .product-layout { grid-template-columns: 1fr; }
        }
        @media (max-width: 768px) {
            .nav-links { display: none; }
            .hamburger { display: flex; }
            .hero, .page-header { text-align: center; }
            .hero-content { margin: 0 auto; }
            .hero h1, .page-header h1, .section-title h1, .section-title h2, .product-details h1 { font-size: 2.5rem; }
            .section { padding: 80px 0; }
            .why-us-grid, .full-product-grid { grid-template-columns: 1fr; }
            .container { padding: 0 20px; }
            .hero h1 { font-size: 2.8rem; }
            .hero p { font-size: 1rem; }
            .hero-btn { padding: 15px 30px; font-size: 0.9rem; }
            .section-title h2, .section-title h1 { font-size: 2rem; }
            .feature-item svg { width: 40px; height: 40px; }
            .feature-item h3 { font-size: 1.3rem; }
            .product-card .product-image img { height: 250px; }
            .product-info { padding: 20px; }
            .product-info h3 { font-size: 1.3rem; }
        }
        @media (max-width: 480px) {
            .hero h1 { font-size: 2.2rem; }
            .section-title h2, .section-title h1 { font-size: 1.8rem; }
            .why-us-grid, .product-grid { gap: 25px; }
            .feature-item { padding: 0 10px; }
            .feature-item h3 { font-size: 1.2rem; }
            .feature-item p { font-size: 0.9rem; }
            .product-card .product-image img { height: 200px; }
            .cta-button { padding: 15px 25px; font-size: 0.9rem; }
        }
        @media (max-width: 576px) {
            .hero h1 { font-size: 2rem; }
            .section-title h2, .section-title h1 { font-size: 1.6rem; }
            .why-us-grid, .product-grid { gap: 20px; }
            .feature-item { padding: 0 5px; }
            .feature-item h3 { font-size: 1.1rem; }
            .feature-item p { font-size: 0.85rem; }
            .product-card .product-image img { height: 180px; }
            .cta-button { padding: 12px 20px; font-size: 0.85rem; }
        }
    
<link href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css" rel="stylesheet">
<link rel="stylesheet" href="{{ url_for('static', filename='css/auth-modal.css') }}">
</style>
{% endblock %}

{% block content %}
<main>
        <!-- Hero Section -->
        <section class="hero">
            <div class="container">
                <div class="hero-content" data-aos="fade-up">
                    <h1>Sizning Uyingiz, Sizning Uslubingiz</h1>
                    <p>Premium sifatli mebellarimiz bilan uy yoki ofisingizni chiroyliroq qiling. Bizning to'plamimiz zamonaviy dizayn va qulaylikni birlashtiradi.</p>
                    <a href="{{ url_for('collection') }}" class="hero-btn">Kolleksiyani ko'rish</a>
                </div>
            </div>
        </section>

        <!-- Features Section -->
        <section class="features-section">
            <div class="container">
                <div class="section-title">
                    <h2>Nima Uchun <span>Biz?</span></h2>
                    <p>Biz faqat mebel ishlab chiqarmaymiz. Biz sizning uyingiz uchun san'at asarlari yaratamiz.</p>
                </div>
                <div class="why-us-grid">
                    <div class="feature-item">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M11.42 15.17L17.25 21A2.652 2.652 0 0021 17.25l-5.877-5.877M11.42 15.17l2.472-2.472a3.375 3.375 0 000-4.773L6.75 2.25 2.25 6.75l8.477 8.477a3.375 3.375 0 004.773 0z" />
                        </svg>
                        <h3>Betakror Dizayn</h3>
                        <p>Har bir to'plamimiz Italiyaning yetakchi dizaynerlari bilan hamkorlikda, eng so'nggi trendlar asosida yaratiladi.</p>
                    </div>
                    <div class="feature-item">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        <h3>Beqiyos Sifat</h3>
                        <p>Biz faqat Yevropaning eng yaxshi, ekologik toza va sertifikatlangan materiallaridan foydalanamiz.</p>
                    </div>
                    <div class="feature-item">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z" />
                        </svg>
                        <h3>Uzoq Yillik Kafolat</h3>
                        <p>Har bir mahsulotimizga 10 yillik kafolat beramiz, chunki biz o'z ishimiz sifatiga ishonamiz.</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Latest Products Section -->
        <section class="latest-products">
            <div class="container">
                <div class="section-title">
                    <h2>Eng Ommabop <span>Modellar</span></h2>
                    <p>Mijozlarimiz tomonidan eng yuqori baholangan va sevib tanlangan to'plamlar.</p>
                </div>
                <div class="view-collection-link">
                    <a href="{{ url_for('collection') }}" class="cta-button">BARCHA KOLLEKSIYANI KO'RISH</a>
                </div>
                <div class="product-grid">
                    {% if products %}
                        {% for product in products[:4] %}  <!-- Show only first 4 products -->
                        <a href="{{ url_for('product', product_name=product.slug) }}" class="product-card" data-aos="fade-up" data-aos-delay="{{ loop.index * 100 }}">
                            <div class="product-image">
                                {% if product.main_image %}
                                <img src="{{ product.main_image }}" alt="{{ product.name }}">
                                {% else %}
                                <img src="https://images.unsplash.com/photo-1594026112271-b614f18be272?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=800&q=80" alt="{{ product.name }}">
                                {% endif %}
                            </div>
                            <div class="product-info">
                                <h3>{{ product.name }}</h3>
                                <p>Hashamatli klassika va zamonaviy qulaylik.</p>
                            </div>
                        </a>
                        {% endfor %}
                    {% else %}
                        <p style="grid-column: 1 / -1; text-align: center; color: var(--color-light-grey);">Hozircha mahsulotlar mavjud emas.</p>
                    {% endif %}
                </div>
            </div>
        </section>
    </main>

    <script src="{{ url_for('static', filename='js/auth-modal.js') }}"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Initialize AOS
            AOS.init({
                duration: 800,
                easing: 'ease-out-cubic',
                once: true,
                offset: 100
            });
            
            // Initialize auth modal
            if (typeof window.authModal === 'undefined') {
                console.log('Creating new AuthModal instance');
                window.authModal = new AuthModal();
            }
            
            // Sticky header
            const header = document.getElementById('mainHeader');
            window.addEventListener('scroll', () => {
                header.classList.toggle('scrolled', window.scrollY > 50);
            });
            
            // Mobile menu toggle
            const hamburger = document.getElementById('hamburger');
            const navLinks = document.querySelector('.nav-links');
            
            hamburger.addEventListener('click', () => {
                navLinks.classList.toggle('show');
                hamburger.classList.toggle('active');
            });
            
            // Close menu when clicking on a link
            const navItems = document.querySelectorAll('.nav-links a');
            navItems.forEach(item => {
                item.addEventListener('click', () => {
                    navLinks.classList.remove('show');
                    hamburger.classList.remove('active');
                });
            });
        });
    </script>
    
    <!-- Admin Access Button -->
    <button class="admin-access" onclick="window.location.href='/admin/login'"
            title="Admin Panel" style="position: fixed; bottom: 20px; right: 20px; z-index: 1000; background: rgba(204, 0, 0, 0.9); color: white; border: none; width: 50px; height: 50px; border-radius: 50%; cursor: pointer; font-size: 1.5rem; box-shadow: 0 5px 15px rgba(0,0,0,0.3);">
        ðŸ”§
    </button>
{% endblock %}

{% block extra_js %}
<script src="{{ url_for('static', filename='js/auth-modal.js') }}"></script>
{% endblock %}
